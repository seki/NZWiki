#!/usr/bin/env ruby
# -*- coding: utf-8 -*-

require "bundler/setup"
require "nzwiki"

require 'webrick'
require 'webrick/httpserver'

store = NZWiki::Store.new(Drip.new('nzwiki_db'), 'rick')
book = NZWiki::Book.new(store)
auth = [{:question => 'プラターヌで引ける枚数は？',
          :answer => ['7']},
        {:question => 'ティエルノで引ける枚数は？',
          :answer => ['3']},
        {:question => 'きずぐすりで回復するのは何ダメージ？',
          :answer => ['30', '20', '40', '10']},
        {:question => 'シェイミEX XY6のタイプは？',
          :answer => ['無色', 'ひこう', '草', 'ノーマル']},
        {:question => '最初の手札の枚数は？',
          :answer => ['7']},
        {:question => 'シェイミEXのセットアップは手札が何枚になるまで引く？',
          :answer => ['6']},
        {:question => 'フウロで持ってこれないのは？',
          :answer => ['エネルギー', 'グッズ', 'サポート', 'スタジアム']},
        {:question => '禁止になったXYのカードは？',
          :answer => ['フラダリの奥の手', '探求者', 'ポケモンキャッチャー', 'フラダリ']},
        {:question => 'シェイミEX XY6のHPは？',
          :answer => ['110']},
       ]
x = store.auth_get(1)
unless x
  auth.each do |it|
    num = store.auth_create
    store.auth_set(num, it)
  end
end

NZWiki::NZSession.book = book
NZWiki::NZSession.store = store

tofu = Tofu::Bartender.new(NZWiki::NZSession, 'nz_8083_2')
s = WEBrick::HTTPServer.new(:Port => 8083)
s.mount("/", Tofu::Tofulet, tofu)
s.mount('/img/button01.png', WEBrick::HTTPServlet::FileHandler, './lib/nzwiki/img/button01.png')
s.mount('/img/button02.png', WEBrick::HTTPServlet::FileHandler, './lib/nzwiki/img/button02.png')
s.mount('/img/topimg.png',    WEBrick::HTTPServlet::FileHandler, './lib/nzwiki/img/topimg.png')
s.mount('/img/img0.png',    WEBrick::HTTPServlet::FileHandler, './lib/nzwiki/img/img0.png')
s.mount('/img/img1.png',    WEBrick::HTTPServlet::FileHandler, './lib/nzwiki/img/img1.png')
s.mount('/img/bg01.png',     WEBrick::HTTPServlet::FileHandler, './lib/nzwiki/img/bg01.png')
s.mount('/img/bg02.png',     WEBrick::HTTPServlet::FileHandler, './lib/nzwiki/img/bg02.png')
s.mount('/css/nzwiki.css', WEBrick::HTTPServlet::FileHandler, './lib/nzwiki/css/nzwiki.css')
s.mount('/font/misaki_gothic.ttf', WEBrick::HTTPServlet::FileHandler, './lib/nzwiki/font/misaki_gothic.ttf')
s.start
